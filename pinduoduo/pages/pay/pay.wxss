/* pages/pay/pay.wxss */
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.container .block1 {
    padding: 10rpx;
    width: 100%;
    height: 110rpx;
    border-bottom: 1px solid #f5f5f5;
}
.block1 .block1_box {
    display: inline-block;
    margin: 10rpx;
}
.block1_box image {
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 50rpx;
    height: 50rpx;
}
.block1 .box.block1_box {
    position: absolute;
    left: 100rpx;
    top: 0;
}
.block1 .box.blk1_box {
    margin-bottom: 10rpx;
}
.blk1_box .name {
    font-size: 36rpx;
    font-weight: 800;
    margin-right: 10rpx; 
}
.blk1_box .telephone {
    font-size: 30rpx;
    color: #151516;
} 
.block1_box .blk1_box2 {
    font-size: 28rpx;
    color: #151516;
}


.container .block2 {
    width: 100%;
    padding: 20rpx;
    font-size: 30rpx;
}

.container .block3 {
    width: 100%;
    background: #f5f5f5;
    display: flex;
}
.block3 .block3_box image {
    width: 200rpx;
    height: 200rpx;
    margin: 15rpx;
}
.block3 .box.block3_box {
    padding: 15rpx;
}
.block3_box .box {
    margin-bottom: 10rpx;
}
.block3_box .box.content {
    font-size: 29rpx;
    color: #151516;
}
.block3_box .box.modal {
    font-size: 26rpx;
    color: #9f9f9f;
}
.block3_box .box.price {
    font-size: 30rpx;
    color: #151516;
}


.container .block4 {
    position: relative;
    width: 100%;
    margin: 20rpx;
}
.block4 .stepper {
    position: absolute;
    top: -10rpx;
    right: 45rpx;
}
.block4 .stepper .box {
    display: inline-block;
}
.stepper .box.normal {
    font-size: 40rpx;
    height: 55rpx;
    width: 65rpx;
    background: #e0e0e0;
    text-align: center;
}
.stepper .box.number {
    width: 80rpx;
    height: 55rpx;
    font-size: 36rpx;
    text-align: center;
}


.container .block5 {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 80rpx;
    width: 100%;
    display: flex;
}
.block5_box {
    padding-top: 14rpx;
}
.block5_box.box1 {
    width: 500rpx;
    text-align: center;
}
.block5_box.box1 .content2 {
    font-size: 40rpx;
    color: #e02e24;
}
.block5_box.box1 .content3 {
    color: #e02e24;
}
.block5_box.box2 {
    width: 250rpx;
    font-size: 42rpx;
    background: #e02e24;
    color: #ffffff;
    text-align: center;
}
